<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_title_dialog_create_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Title " />

    <EditText
        android:id="@+id/edit_text_title_dialog_create_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/label_coords_dialog_create_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Coordinates (X,Y)" />

    <EditText
        android:id="@+id/edit_x_coord_dialog_create_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="x coord"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_y_coord_dialog_create_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="y coord"
        android:inputType="number" />

</LinearLayout>
