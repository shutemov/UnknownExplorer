<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="#C9CCCCCC"
    android:padding="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFD">

        <Button
            android:id="@+id/delete_button"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:text="Delete"
            android:textColor="#C1FF0000"
            app:layout_constraintBottom_toBottomOf="@+id/edit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_button" />

        <TextView
            android:id="@+id/text_title_router_my_routes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="136dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <TextView
            android:id="@+id/text_description_router_my_routes"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_title_router_my_routes"
            tools:layout_conversion_absoluteHeight="136dp"
            tools:layout_conversion_absoluteWidth="0dp" />

        <TextView
            android:id="@+id/text_interest_router_my_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Interes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/text_type_router_my_routes"
            style="Lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="type"
            app:layout_constraintStart_toEndOf="@+id/text_interest_router_my_routes"
            app:layout_constraintTop_toTopOf="@+id/text_interest_router_my_routes" />

        <TextView
            android:id="@+id/text_time_router_my_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="time"
            app:layout_constraintStart_toEndOf="@+id/text_type_router_my_routes"
            app:layout_constraintTop_toTopOf="@+id/text_type_router_my_routes" />

        <TextView
            android:id="@+id/text_rating_router_my_routes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:text="rating"
            app:layout_constraintEnd_toEndOf="@+id/text_description_router_my_routes"
            app:layout_constraintStart_toEndOf="@+id/text_time_router_my_routes"
            app:layout_constraintTop_toTopOf="@+id/text_time_router_my_routes" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description_router_my_routes" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Edit"
            android:textColor="#1837A5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description_router_my_routes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
